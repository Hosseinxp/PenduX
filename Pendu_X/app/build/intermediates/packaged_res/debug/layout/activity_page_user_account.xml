                <TextView
                    android:id="@+id/txt_pageUserAccount_emailTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:fontFamily="sans-serif-condensed-light"
                    android:gravity="center"
