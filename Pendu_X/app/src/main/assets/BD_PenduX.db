                            DEFAULT ( 0 ),
    LOST     INTEGER        NOT NULL
                            DEFAULT ( 0 ),
    on_off   INTEGER        NOT NULL
                            DEFAULT ( 0 ),
    Email    VARCHAR        UNIQUE 
);

